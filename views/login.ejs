<!-- login -->

<section loading="lazy" class="back_image_auth back_image_login">
  <div class="filter_auth filter_login"></div>
  <div class="center_auth center_login">
    <h2 class="font_weight_auth">Login</h2>
    <form action="/auth/login" method="POST">
      <%- include("partials/message") %>

      <div class="txt_field_auth">
        <input id="username" type="text" name="username" required />
        <span></span>
        <i class="uil uil-envelope-alt up_joinus"></i>
        <label for="username" class="up_joinus">Email</label>
      </div>

      <div class="txt_field_auth">
        <input id="password" type="password" name="password" required />
        <span></span>
        <i class="uil uil-lock up_joinus"></i>
        <label for="password" class="up_joinus">Password</label>
      </div>
      <div class="pass_auth">Forget password?</div>
      <input type="submit" value="Login" />

      <a href="/auth/google" class="google"
        ><ion-icon name="logo-google"></ion-icon>Login with google
      </a>

      <div class="link_auth">
        Not a member ? <a href="/auth/signup">Sign up</a> or
        <a href="/">Home</a>
      </div>
    </form>
  </div>
</section>
