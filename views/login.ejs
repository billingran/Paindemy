<section class="size_background_auth back_image_auth back_signup_login">
  <div class="size_background_auth filter_auth"></div>
  <div class="center_auth">
    <h2 class="font_weight_auth">Login</h2>
    <form action="#" method="post">
      <div class="txt_field_auth">
        <input id="email" type="text" name="email" required />
        <span></span>
        <i class="uil uil-envelope-alt"></i>
        <label for="email">Email</label>
      </div>
      <div class="txt_field_auth">
        <input id="password" type="text" name="password" required />
        <span></span>
        <i class="uil uil-lock"></i>
        <label for="password">Password</label>
      </div>
      <div class="pass_auth">Forget password?</div>
      <input type="submit" value="Login" />

      <a href="#" class="google"
        ><ion-icon name="logo-google"></ion-icon>Login With Google
      </a>

      <div class="link_auth">
        Not a member ? <a href="#">Sign up</a> or <a href="#">Home</a>
      </div>
    </form>
  </div>
</section>
