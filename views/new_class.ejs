<!-- new class -->

<section loading="lazy" class="back_image_auth back_image_newclass">
  <div class="filter_auth filter_newclass"></div>
  <div class="center_auth center_newclass">
    <h2>New Class</h2>
    <form
      action="/instructor/newclass"
      method="POST"
      enctype="multipart/form-data"
    >
      <%- include("partials/message") %>

      <div class="txt_field_auth">
        <input id="nameCourse" type="text" name="nameCourse" required />
        <span></span>
        <i class="uil uil-book-alt up_joinus"></i>
        <label for="nameCourse" class="up_joinus">Classname</label>
      </div>

      <div class="txt_field_auth">
        <input
          id="dateCourse"
          type="date"
          name="dateCourse"
          required
          min="<%= currentDate %>"
        />
        <span></span>
        <i class="uil uil-calender up_joinus"></i>
        <label for="dateCourse" class="up_joinus">Date</label>
      </div>

      <div class="txt_field_auth">
        <input id="timeCourse" type="time" name="timeCourse" required />
        <span></span>
        <i class="uil uil-clock up_joinus"></i>
        <label for="timeCourse" class="up_joinus">Time</label>
      </div>

      <div class="txt_field_auth">
        <input id="addressCourse" type="text" name="addressCourse" required />
        <span></span>
        <i class="uil uil-map-marker up_joinus"></i>
        <label for="addressCourse" class="up_joinus">Address</label>
      </div>

      <div class="txt_field_auth">
        <textarea
          name="descriptionCourse"
          id="descriptionCourse"
          required
        ></textarea>
        <span></span>
        <i class="uil uil-file-alt up_joinus"></i>
        <label for="descriptionCourse" class="up_joinus">Description</label>
      </div>

      <div class="txt_field_auth">
        <select id="categoryCourse" name="categoryCourse" required>
          <option value="">-- Select a category --</option>
          <option value="Bakery">Bakery</option>
          <option value="Pastry">Pastry</option>
          <option value="Other">Other</option>
        </select>
        <span></span>
        <i class="uil uil-folder up_joinus"></i>
        <label for="categoryCourse" class="up_joinus">Category</label>
      </div>

      <div class="txt_field_auth">
        <input
          id="caloriesCourse"
          type="number"
          name="caloriesCourse"
          min="0"
          required
        />
        <span></span>
        <i class="uil uil-fire up_joinus"></i>
        <label for="caloriesCourse" class="up_joinus">Calories</label>
      </div>

      <div class="ingredient_list">
        <div class="txt_field_auth ingredient_div">
          <input
            id="ingredientsCourse"
            type="text"
            name="ingredientsCourse"
            required
          />
          <span></span>
          <i class="up_joinus">
            <iconify-icon icon="lucide:wheat"></iconify-icon>
          </i>
          <label for="ingredientsCourse" class="up_joinus"
            >Ingredient <span style="color: #72b955">0</span></label
          >
        </div>
      </div>

      <div class="ctn_plus_btn">
        <button type="button" class="add_ingredients_btn plus_btn a_NBorder">
          + Ingredient
        </button>
      </div>

      <div class="txt_field_auth imgClass_div">
        <input
          id="imageCourse"
          type="file"
          name="imageCourse"
          accept="image/*"
          multiple
          required
          style="opacity: 0"
        />
        <span></span>
        <label for="imageCourse" class="upload_joinus a_NBorder"
          ><i class="uil uil-image"></i>+ Image</label
        >
      </div>
      <div class="img_list"></div>

      <input type="submit" value="Submit" />
      <% if (authUser) { %>
      <div class="link_auth">
        Back to
        <a href="/instructor/mycourses/<%= authUser._id %>"
          ><%= authUser.firstnameUser %> <%= authUser.lastnameUser %></a
        >
        's courses or
        <a href="/">Home</a>
      </div>
      <% } %>
    </form>
  </div>
</section>
