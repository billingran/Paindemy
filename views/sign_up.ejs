<!-- sign up -->

<section loading="lazy" class="back_image_auth back_image_signup">
  <div class="filter_auth filter_signup"></div>
  <div class="center_auth center_signup">
    <h2>Créer un compte</h2>
    <form action="/auth/signup" method="POST">
      <%- include("partials/message") %>
      <div class="txt_field_auth">
        <input id="firstnameUser" type="text" name="firstnameUser" required />
        <span></span>
        <i class="uil uil-parking-circle up_joinus"></i>
        <label for="firstnameUser" class="up_joinus">Prénom</label>
      </div>

      <div class="txt_field_auth">
        <input id="lastnameUser" type="text" name="lastnameUser" required />
        <span></span>
        <i class="uil uil-user-circle up_joinus"></i>
        <label for="lastnameUser" class="up_joinus">Nom de famille</label>
      </div>

      <div class="txt_field_auth">
        <input id="emailUser" type="email" name="emailUser" required />
        <span></span>
        <i class="uil uil-envelope-alt up_joinus"></i>
        <label for="emailUser" class="up_joinus">Adresse mail</label>
      </div>

      <div class="txt_field_auth">
        <input id="passwordUser" type="password" name="passwordUser" required />
        <span></span>
        <i class="uil uil-lock up_joinus"></i>
        <label for="passwordUser" class="up_joinus">Mot de passe</label>
      </div>

      <div class="txt_field_auth">
        <input
          id="confirmPasswordUser"
          type="password"
          name="confirmPasswordUser"
          required
        />
        <span></span>
        <i class="uil uil-lock up_joinus"></i>
        <label for="confirmPasswordUser" class="up_joinus">Confirmation</label>
      </div>

      <input type="submit" value="Créer un compte" />
      <div class="link_auth">
        Déjà membre ? <a href="/auth/login">Se connecter</a> or
        <a href="/">Menu</a>
      </div>
    </form>
  </div>
</section>
