<!-- /////////////////////////////////////////////// -->
<!-- side bar header -->

<section class="side_bar_header">
  <ul class="ul_sideBar_header">
    <li>
      <div class="ctn_burger">
        <div class="burger"></div>
      </div>
    </li>
    <li>
      <form method="POST" action="/course/search" class="form_homeOne_sideBar">
        <i class="uil uil-search icon_search_homeOne"></i>
        <input
          id="search_homeOne_sideBar"
          type="search"
          name="searchTerm"
          placeholder="Searching..."
          autofocus
          class="input_homeOne"
        />
        <label for="search_homeOne_sideBar"></label>
      </form>
    </li>
    <li class="ctn_image_headerSidebar">
      <img src="/images/logo_home.png" alt="logo Paindemy" loading="lazy" />
      <% if (authUser) { %>
      <a href="/" class="ctn_image_sidebar">
        <span><%= authUser.firstnameUser[0] %></span>
        <span><%= authUser.lastnameUser[0] %></span>
        <div class="ctn_courseNumber_sidebar">1</div></a
      >
      <% } %>
    </li>
    <% if (authUser) { %>
    <li>
      <div class="centralA">
        <% if (authUser.roleUser == 'instructor') { %>
        <iconify-icon
          icon="tabler:chef-hat"
          class="icon_header_sidebar"
        ></iconify-icon>
        <% } %> <% if (authUser.roleUser == 'student') { %>
        <i class="uil uil-graduation-cap icon_header_sidebar"></i>
        <% } %> Teng-wei Huang
      </div>
    </li>
    <% } %> <% if (!authUser) { %>
    <li class="ctn_sidbar_signup">
      <a href="/auth/signup" class="centralA"
        ><i class="uil uil-illustration icon_sideBar_header"></i> sign up</a
      >
    </li>
    <li class="ctn_sidbar_login">
      <a href="/auth/login" class="centralA"
        ><i class="uil uil-signin icon_sideBar_header"></i> Login</a
      >
    </li>
    <% } %> <% if (authUser) { %> <% if (authUser.roleUser == 'instructor') { %>

    <li>
      <a href="/instructor/newclass" class="centralA"
        ><i class="uil uil-book-alt icon_sideBar_header"></i>New course</a
      >
    </li>
    <% } %>

    <li>
      <a href="/auth/logout" class="centralA"
        ><i class="uil uil-signout icon_sideBar_header"></i> Logout</a
      >
    </li>
    <li>
      <a
        href="/<%= authUser.roleUser %>/delete/<%= authUser._id %>"
        class="centralA"
      >
        <i class="uil uil-minus-circle icon_sideBar_header"></i> Close
        account</a
      >
    </li>
    <% } %>
  </ul>
</section>
