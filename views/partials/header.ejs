    <form method="POST" action="/course/search" class="form_homeOne">
      <i class="uil uil-search icon_search_homeOne"></i>
      <input
        id="search_homeOne"
        type="search"
        name="searchTerm"
        placeholder="Searching..."
        autofocus
        class="input_homeOne"
      />
      <label for="search_homeOne"></label>
    </form>

    <div class="central">
      <% if (!authUser) { %>
      <div class="ctn_auth_header">
        <a href="/auth/signup" class="auth_signup_header">Sign up</a>
        <span class="midLine_auth_header">/</span>
        <a href="/auth/login" class="auth_login_header">Login</a>
      </div>
      <% } %> <% if (authUser) { %>
      <a
        href="/<%= authUser.roleUser %>/mycourses/<%= authUser._id %>"
        class="ctn_image_header"
      >
        <span><%= authUser.firstnameUser[0] %></span>
        <span><%= authUser.lastnameUser[0] %></span>
        <% if (authUser.roleUser == "student") { %>
        <div class="ctn_course_number"></div>
        <% } %> <% if (authUser.roleUser == "instructor") { %>
        <div class="ctn_course_number"></div>
        <% } %>
      </a>
      <% if (authUser.roleUser == "student") { %>
      <a
        href="/<%= authUser.roleUser %>/profile/<%= authUser._id %>"
        class="ctn_image_header"
      >
        <i class="uil uil-graduation-cap icon_header"></i>
      </a>
      <% } %> <% if (authUser.roleUser == "instructor") { %>
      <a
        href="/<%= authUser.roleUser %>/profile/<%= authUser._id %>"
        class="ctn_image_header"
      >
        <iconify-icon icon="tabler:chef-hat" class="icon_header"></iconify-icon>
      </a>
      <% } %> <% } %>

      <div class="ctn_burger">
        <div class="burger"></div>
      </div>
    </div>
